@using AccentureAcademy.TpFinal.Models
@model List<Generos>

@{
    ViewBag.Title = "Generos";
}

<article class="mostrar-editar card container">
    <h2 class="card-header d-flex justify-content-center">Mostrar</h2>
    <section class="d-flex align-items-center justify-content-end m-2" title="Agregar Nuevo Género"><a href="@Url.Action("Agregar", "Genero")"><ion-icon name="add" size="large"></ion-icon></a></section>

    @if (this.Model.Count > 0)
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Géneros</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Generos genero in this.Model)
                {
                    <tr>
                        <td>@genero.Genero</td>
                        <td class="text-right">
                            @Html.ActionLink("Editar", "Editar", new { id = genero.Id }, new { @class = "mr-3" })
                            @Html.ActionLink("Eliminar", "Eliminar", new { id = genero.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No se encuentran géneros para mostrar</p>
    }
</article>
